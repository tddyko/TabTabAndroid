<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.yjrlab.tabdoctor.view.SignUpActivity">

    <com.yjrlab.tabdoctor.libs.CustomActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:homeVisible="false"
        app:iconVisible="false" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/whiteTitleBold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="기본정보" />

                    <TextView
                        style="@style/whiteTitleBold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="건강정보"
                        android:textColor="@color/lightBlue" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/img_doctor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/whiteTitleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TAP Doctor"
                                    android:textAppearance="@style/TextAppearance.FontPathBold"
                                    android:textSize="25sp" />

                                <TextView
                                    style="@style/whiteTitleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="@string/info_msg"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/bg_textbox_white_10"
                        android:gravity="center"
                        android:text="honggildong@naver.com"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_textbox_white_10"
                        android:orientation="vertical"
                        android:padding="20dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="약관동의"
                                android:textAppearance="@style/TextAppearance.FontPathBold"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <com.yjrlab.tabdoctor.libs.CheckableButton
                                android:id="@+id/checkableButtonAll"
                                android:layout_width="90dp"
                                android:layout_height="25dp"
                                android:background="@drawable/selector_btn_agreement" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textViewTerm1"
                                style="@style/blackTitle15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/input_title_1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="(필수)"
                                android:textColor="@color/colorAccent"
                                android:textSize="10sp" />

                            <com.yjrlab.tabdoctor.libs.CheckableButton
                                android:id="@+id/checkableButton1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/selector_btn_check_blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textViewTerm2"
                                style="@style/blackTitle15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/input_title_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="(필수)"
                                android:textColor="@color/colorAccent"
                                android:textSize="10sp" />

                            <com.yjrlab.tabdoctor.libs.CheckableButton
                                android:id="@+id/checkableButton2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/selector_btn_check_blue" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textViewTerm3"
                                style="@style/blackTitle15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/input_title_3" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="(선택)"
                                android:textColor="@color/colorPrimary"
                                android:textSize="10sp" />

                            <com.yjrlab.tabdoctor.libs.CheckableButton
                                android:id="@+id/checkableButton3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/selector_btn_check_blue" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonOk"
                            style="@style/button"
                            android:text="다음" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/whiteTitleBold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="기본정보"
                        android:textColor="@color/lightBlue" />

                    <TextView
                        style="@style/whiteTitleBold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="건강정보" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/img_doctor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/whiteTitleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TAP Doctor"
                                    android:textAppearance="@style/TextAppearance.FontPathBold"
                                    android:textSize="25sp" />

                                <TextView
                                    style="@style/whiteTitleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="@string/info_msg"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_textbox_white_10"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                style="@style/blackTitle17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="직업" />

                            <EditText
                                android:id="@+id/editTextJob"
                                android:editable="false"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/bg_input_box"
                                android:hint="직업을 선택하세요"
                                android:paddingLeft="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical">

                            <TextView
                                style="@style/blackTitle17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="나이" />

                            <EditText
                                android:id="@+id/editTextAge"
                                android:editable="false"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/bg_input_box"
                                android:hint="연령대를 선택하세요"
                                android:paddingLeft="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical">

                            <TextView
                                style="@style/blackTitle17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성별" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:checkedButton="@+id/radioButtonMan"
                                android:orientation="horizontal">

                                <com.yjrlab.tabdoctor.libs.CheckableButton
                                    android:id="@+id/radioButtonMan"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/selector_btn_man" />

                                <com.yjrlab.tabdoctor.libs.CheckableButton
                                    android:id="@+id/radioButtonWoman"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="30dp"
                                    android:background="@drawable/selector_btn_woman" />
                            </LinearLayout>
                        </LinearLayout>


                        <Button
                            android:id="@+id/buttonOk2"
                            style="@style/button"
                            android:layout_marginTop="10dp"
                            android:text="다음" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
