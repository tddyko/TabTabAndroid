<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_textbox_white_20"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/bg_red_top">

        <TextView
            android:id="@+id/title"
            style="@style/whiteTitle20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="연령때를 선택"
            android:textAppearance="@style/TextAppearance.FontPathBold"

            />

        <ImageView

            android:id="@+id/buttonClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_close" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="소아" />

                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton1"
                    android:background="@drawable/selector_btn_check_black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="10대" />
                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton2"
                    android:background="@drawable/selector_btn_check_black" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout3"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20대" />

                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton3"
                    android:background="@drawable/selector_btn_check_black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30대" />

                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton4"
                    android:background="@drawable/selector_btn_check_black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="40대" />
                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton5"
                    android:background="@drawable/selector_btn_check_black" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout6"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50대" />
                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton6"
                    android:background="@drawable/selector_btn_check_black" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout7"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="60대이상" />
                <com.yjrlab.tabdoctor.libs.CheckableButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/radioButton7"
                    android:background="@drawable/selector_btn_check_black" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider" />


        </LinearLayout>


    </FrameLayout>


    <Button
        android:id="@+id/buttonOk"
        style="@style/button"
        android:text="확인" />
</LinearLayout>

